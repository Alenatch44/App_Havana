<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/personImageView"
            android:layout_width="@dimen/_318sdp"
            android:layout_height="@dimen/_304sdp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="@dimen/_318sdp"
            android:layout_height="@dimen/_290sdp"
            android:contentDescription="@string/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="@+id/personImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_g_icon" />


        <TextView
            android:id="@+id/text_slideshow"
            android:layout_width="@dimen/_318sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_246sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/person_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/text_2_slideshow"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginStart="@dimen/_215sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/person_edit"
            android:textColor="@color/person_edit"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_slideshow" />

        <Button
            android:id="@+id/button_exit"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_260sdp"
            android:background="@drawable/ic_baseline_login_24"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/personImageView"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="@dimen/_318sdp"
            android:layout_height="@dimen/_59sdp"
            android:paddingStart="@dimen/_54sdp"
            android:paddingEnd="@dimen/_54sdp"
            android:drawableLeft="@drawable/ic_sport_icon"
            android:gravity="center|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personImageView"
            android:text="@string/button_person"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:background="@color/person_color"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="@dimen/_318sdp"
            android:layout_height="@dimen/_59sdp"
            android:paddingStart="@dimen/_59sdp"
            android:paddingEnd="@dimen/_54sdp"
            android:drawableLeft="@drawable/ic_calendar_icon"
            android:gravity="center|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_1"
            android:text="@string/button_2_person"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:background="@color/person_color_1"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="@dimen/_318sdp"
            android:layout_height="@dimen/_59sdp"
            android:paddingStart="@dimen/_54sdp"
            android:paddingEnd="@dimen/_54sdp"
            android:drawableLeft="@drawable/ic_icon_people"
            android:gravity="center|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_2"
            android:text="@string/button_3_person"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:background="@color/person_color"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="@dimen/_318sdp"
            android:layout_height="@dimen/_59sdp"
            android:paddingStart="@dimen/_54sdp"
            android:paddingEnd="@dimen/_54sdp"
            android:drawableLeft="@drawable/ic_icon_g"
            android:gravity="center|center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_3"
            android:text="@string/button_4_person"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:background="@color/person_color_1"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>